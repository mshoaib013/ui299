<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpp"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:foregroundGravity="center">
        <EditText
            android:textColor="#FFFFFF"
            android:id="@+id/signupNameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textAlignment="center"
            android:inputType="text"/>

        <EditText
            android:textColor="#FFFFFF"
            android:id="@+id/signupEmailField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Email"
            android:inputType="textEmailAddress"/>
        <EditText
            android:textColor="#FFFFFF"
            android:id="@+id/signupPassField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textAlignment="center"
            android:inputType="textPassword"/>

        <EditText
            android:textColor="#FFFFFF"
            android:id="@+id/signupRepeatPassField"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Conform Password"
            android:inputType="textPassword"/>

        <Spinner
            android:id="@+id/signupSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:visibility="gone"
            android:id="@+id/signupNumberOfCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Counters Needed"
            android:textAlignment="center"
            android:inputType="number"/>

        <Button
            android:id="@+id/signupSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>